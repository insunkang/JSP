<head>
	<meta charset="EUC-KR">
	<title>Insert title here</title>
	<script type="text/javascript">
	function allcheck() {
		mycheck = document.myform.prd;
		allChkVal = myform.allchk.checked;
		//alert(allChkVal);
		for(i=0;i<mycheck.length;i++){
			mycheck[i].checked=allChkVal;
		}
		
	}
	function single() {
		mycheck = document.myform.prd;
		myprice = document.myform.price;
		mycount = document.myform.count;
		myspan = document.getElementsByClassName("calcprice");
		printVal="";
		for(i=0;i<mycheck.length;i++){
			if(mycheck[i].checked==true){
				printVal= parseInt(myprice[i].value)*parseInt(mycount[i].value);
				myspan[i].innerHTML = printVal;		
							
			}else{				
				printVal="";
				myspan[i].innerHTML = printVal;				
			}
		}	
		
		
		
	}
	
	</script>
</head>
<body>
	<form name="myform">
		<table border="1" width="800">
			<tr>
				<td><input type="checkbox" name="allchk" onclick="allcheck()"/>항목명</td>
				<td>상품정보</td>
