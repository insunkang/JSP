	<script type="text/javascript">
	function allcheck() {
		
		mycheck = document.myform.prd;
		allChkVal = myform.allchk.checked;
		//alert(allChkVal);
		myprice = document.myform.price;
		mycount = document.myform.count;
		myspan = document.getElementsByClassName("calcprice");
		printVal="";
		
		for(i=0;i<mycheck.length;i++){
			mycheck[i].checked=allChkVal;
			
		}
		for(i=0;mycheck[i].length;i++){
			if(allChkVal.checked==true){
				printVal= parseInt(myprice[i].value)*parseInt(mycount[i].value);
				myspan[i].innerHTML = printVal;		
							
			}else{				
				printVal="";
				myspan[i].innerHTML = printVal;				
			}
			
		}
		
	}
	function single1() {
		mycheck = document.myform.prd;
		myprice = document.myform.price;
		mycount = document.myform.count;
		myspan = document.getElementsByClassName("calcprice");
		printVal="";
		
			if(mycheck[0].checked==true){
				printVal= parseInt(myprice[0].value)*parseInt(mycount[0].value);
				myspan[0].innerHTML = printVal;		
							
			}else{				
				printVal="";
				myspan[0].innerHTML = printVal;				
			}
		}
	function single2() {
		mycheck = document.myform.prd;
		myprice = document.myform.price;
		mycount = document.myform.count;
		myspan = document.getElementsByClassName("calcprice");
		printVal="";
		
			if(mycheck[1].checked==true){
				printVal= parseInt(myprice[1].value)*parseInt(mycount[1].value);
				myspan[1].innerHTML = printVal;		
							
			}else{				
				printVal="";
				myspan[1].innerHTML = printVal;				
			}
		}	
		
		
		
	
	
	</script>
